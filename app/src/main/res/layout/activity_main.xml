<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    >

    <EditText
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="masukkan angka"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="masukan angka"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        />

    <TextView
        android:id="@+id/textinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pilih operator"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/text2"
        />

    <Button
        android:id="@+id/btntambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pertambahan"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textinfo"
         />

    <Button
        android:id="@+id/btnkurang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Perkurangan"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btntambah"
        />

    <Button
        android:id="@+id/btnkali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Perkalian"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btnkurang"
        />

    <Button
        android:id="@+id/btnbagi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pembagian"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btnkali"
        />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnbagi"
        android:layout_marginTop="5dp"
        android:text="hasil"
        android:textSize="5mm"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/btnreset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textview1"
        android:hint="Reset"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnreset"
        android:layout_marginTop="20mm"
        android:text="hendri ari wibowo 19670119"
        android:textAlignment="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>